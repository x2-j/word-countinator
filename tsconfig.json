{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@interface/*": ["interfaces/*"],
      "@util/*": ["util/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  },
  "exclude": [
    "src/util/*.test.ts"
  ]
}