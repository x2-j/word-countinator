// Based on https://github.com/tsconfig/bases/blob/main/bases/recommended.json
{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  },
  "exclude": [
    "src/util/*.test.ts"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}