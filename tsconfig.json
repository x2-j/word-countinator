{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@interface/*": ["src/interfaces/*"],
      "@util/*": ["src/util/*"]
    },
    "types": ["node", "jest", "@types/jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "CommonJS"
  },
  "exclude": [
    "src/util/*.test.ts"
  ]
}